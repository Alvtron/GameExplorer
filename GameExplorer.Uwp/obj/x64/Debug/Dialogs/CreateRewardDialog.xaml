<ContentDialog x:ConnectionId='1'
    x:Class="GameExplorer.Uwp.Dialogs.CreateRewardDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameExplorer.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create Reward"
    PrimaryButtonText="Cancel"
    SecondaryButtonText="Create"
                                                         
                                                             
                                 >

    <StackPanel>
        <TextBox x:ConnectionId='2' Header="Amount" Name="AmountBox" Text="{Binding Amount, Mode=TwoWay}" InputScope="Number"                                   />
        <AutoSuggestBox x:ConnectionId='3' Name="TypeASB" Header="Types"                                                                      Text="{Binding Type, Mode=TwoWay}"                           />
    </StackPanel>
</ContentDialog>

